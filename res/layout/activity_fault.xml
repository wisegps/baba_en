<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical" >

    <customView.ParentSlide
        android:id="@+id/smv_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <RelativeLayout
                android:id="@+id/ll_main"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/title_hight"
                android:background="@color/title_back" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title" />

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="@dimen/title_hight"
                    android:layout_height="@dimen/title_hight"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margins"
                    android:padding="@dimen/margins"
                    android:src="@drawable/nav_back"
                    android:visibility="gone" />
<!-- 
                <ImageView
                    android:id="@+id/iv_noti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/small_red_dot"
                    android:visibility="gone" />
 -->              
                    
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_bt"
                android:layout_width="fill_parent"
                android:layout_height="60dip"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/corners" >

                <LinearLayout
                    android:id="@+id/bt_home"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.98"
                    android:background="@drawable/bg_white"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/nav_icon_home" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/home_page"
                        android:textColor="@color/Green"
                        android:textSize="@dimen/content" />
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="fill_parent"
                    android:background="@color/gay_line" />

                <LinearLayout
                    android:id="@+id/bt_map"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.98"
                    android:background="@drawable/bg_white"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ico_map2" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/map"
                        android:textColor="@color/Green"
                        android:textSize="@dimen/content" />
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="fill_parent"
                    android:background="@color/gay_line" />

                <LinearLayout
                    android:id="@+id/bt_info_first"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.98"
                    android:background="@drawable/bg_white"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ico3" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/trip"
                        android:textColor="@color/Green"
                        android:textSize="@dimen/content" />
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="fill_parent"
                    android:background="@color/gay_line" />
                
                
                

                <LinearLayout
                    android:id="@+id/bt_set_first"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_white"
                    android:orientation="vertical" >
  
               
                    <ImageView	
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/nav_ico4_c" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/setup"
                        android:textColor="@color/Green"
                        android:textSize="@dimen/content" />
                </LinearLayout> 
                
                <RelativeLayout 
                    android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
                    >
                    
                 <ImageView 
						android:id="@+id/dddddd"
        		        android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    
	                    android:layout_marginRight="0dp"
	                    android:layout_marginTop="1dp"
	                    android:src="@drawable/small_red_dot"
	                    android:visibility="visible"
        		       />   
                    
                </RelativeLayout>
<!--                
        		<LinearLayout
                  
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@drawable/bg_white"
                    android:orientation="vertical" >
                    
        		    <ImageView 
						android:id="@+id/dddddd"
        		        android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginRight="0dp"
	                    android:layout_marginTop="1dp"
	                    android:src="@drawable/small_red_dot"
	                    android:visibility="gone"
        		       />
                
                 </LinearLayout>  
-->  
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bottom"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:visibility="gone" >

                <Button
                    android:id="@+id/bt_ask"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_green_lights"
                    android:padding="@dimen/margins"
                    android:text="问一下"
                    android:textColor="@color/white"
                    android:textSize="@dimen/bt" />

                <Button
                    android:id="@+id/bt_show"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_green"
                    android:padding="@dimen/margins"
                    android:text="秀一下"
                    android:textColor="@color/white"
                    android:textSize="@dimen/bt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_above="@id/ll_bt"
                android:layout_below="@id/ll_main" >

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scrollbars="none" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <customView.HScrollLayout
                            android:id="@+id/hs_car"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent" >
                        </customView.HScrollLayout>

                        <RelativeLayout
                            android:id="@+id/rl_ad"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone" >

                            <customView.HScrollLayout
                                android:id="@+id/hs_photo"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent" >
                            </customView.HScrollLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:gravity="center_horizontal"
                                android:orientation="vertical" >

                                <LinearLayout
                                    android:id="@+id/ll_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal" >
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tv_content"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/margins"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/content" />
                            </LinearLayout>
                        </RelativeLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/line" />

                        <customView.NoticeScrollTextView
                            android:id="@+id/nstv_message"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:visibility="gone" >
                        </customView.NoticeScrollTextView>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_notice"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >
        </LinearLayout>
    </customView.ParentSlide>

</LinearLayout>
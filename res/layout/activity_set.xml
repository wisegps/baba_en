<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.wise.baba"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray_bg"
    tools:context="com.wise.setting.SetActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/ll_main"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/title_hight"
            android:background="@color/title_back" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/set_center"
                android:textColor="@color/white"
                android:textSize="@dimen/title" />

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/title_hight"
                android:layout_height="@dimen/title_hight"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margins"
                android:padding="@dimen/margins"
                android:src="@drawable/nav_back" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margins"
            android:paddingLeft="@dimen/double_margins"
            android:paddingTop="@dimen/margins" >

            <customView.CircleImageView
                android:id="@+id/iv_logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margins"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_people_no"
                app:border_color="@color/white"
                app:border_width="1dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_logo"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margins"
                        android:text="@string/login_regist"
                        android:textColor="@color/navy"
                        android:textSize="@dimen/main" />

                    <ImageView
                        android:id="@+id/iv_sex"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="@dimen/margins"
                        android:src="@drawable/icon_man"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_service"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/icon_xx_service"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
<!-- 
            <ImageView
                android:id="@+id/iv_eweima"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margins"
                android:background="@drawable/bg_common"
                android:padding="@dimen/margins"
                android:src="@drawable/ewm"
                android:visibility="gone" />
   -->              
                
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/gay_line" />
        
        
<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/tv_sms"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white"
            android:padding="@dimen/double_margins"
            android:text="@string/my_info"
            android:textColor="@color/navy"
            android:textSize="@dimen/content" />
        
        <ImageView
            android:id="@+id/iv_noti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margins"
            android:background="@drawable/bg_common"
            android:padding="@dimen/margins"

            android:src="@drawable/small_red_dot"
            android:visibility="visible" />
        
</RelativeLayout>


        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/gay_line" />

        <TextView
            android:id="@+id/tv_car"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white"
            android:padding="@dimen/double_margins"
            android:text="@string/my_car"
            android:textColor="@color/navy"
            android:textSize="@dimen/content" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/gay_line" />

        <TextView
            android:id="@+id/tv_feedback"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white"
            android:padding="@dimen/double_margins"
            android:text="@string/feedbacks_and_suggestions"
            android:textColor="@color/navy"
            android:textSize="@dimen/content" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/gay_line" />

        <TextView
            android:id="@+id/tv_about"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white"
            android:padding="@dimen/double_margins"
            android:text="@string/about_baba"
            android:textColor="@color/navy"
            android:textSize="@dimen/content" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_login_out"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_pink"
        android:padding="@dimen/margins"
        android:text="@string/exit_login"
        android:textColor="@color/white"
        android:textSize="@dimen/bt"
        android:visibility="gone" />

</RelativeLayout>
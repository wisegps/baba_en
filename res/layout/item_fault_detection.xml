<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tc="http://schemas.android.com/apk/res/com.wise.baba"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_task"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white" >

        <com.wise.state.TasksCompletedView
            android:id="@+id/tasks_view"
            android:layout_width="fill_parent"
            android:layout_height="140dp"
            android:layout_centerInParent="true"
            tc:circleColor="@color/ring_bg_color"
            tc:radius="60dp"
            tc:ringColor="@color/ring_color"
            tc:strokeWidth="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="健康指数"
                android:textColor="@color/navy" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="@dimen/bigs_number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/point"
                    android:textColor="@color/navy" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_detection_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击体检"
                android:textColor="@color/blue_press" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>